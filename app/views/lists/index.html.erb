<!-- # Mostly copied from Noemi's -->
<div class=container>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1598899134739-24c46f58b8c0?q=80&w=2956&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
    <div class="container">
      <h1>Find your next movie</h1>
      <p>Share your favourite movies with your friends</p>
      <a class="btn btn-warning" href="#">Apply now</a>
    </div>
  </div>
  <div class="container mt-3">
    <div class="cards">
      <% @lists.each do |list| %>
        <div class="card-category mt-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1440404653325-ab127d49abc1?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)">
          <h2><%= link_to list.name, list_path(list) %></h2>
          <%= link_to '', list_path(list), class: "card-link" %>
        </div>
      <% end %>
    </div>
    <%= render "form", list: @list %>
  </div>
