<div class=container>
  <h1>Movie List</h1>
  <%= simple_form_for @list do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Create a List" %>
  <% end %>
  <% @lists.each do |list| %>
    <div
      class="card-category mt-3"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <h2><%= link_to list.name, list_path(list) %></h2>
    </div>
  <% end %>
</div>
